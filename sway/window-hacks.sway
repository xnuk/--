for_window [app_id="^gsimplecal$"] {
	floating enable
	move position mouse
	move down 10 px, move left 50 px
	border none
}

for_window [app_id="^pavucontrol$"] {
	floating enable
	resize set width 700 px height 500 px
	border normal
}

